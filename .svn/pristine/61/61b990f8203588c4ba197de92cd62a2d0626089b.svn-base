@charset "utf-8";
/* CSS Document */

.weather_top {clear:both;display:inline-block;width:100%;height:391px}
.weather_bottom {clear:both;display:inline-block;width:100%;height:470px;padding:20px}

.weather_box {display:inline-block;width:24%;height:180px;margin:0 0.8% 15px 0;border-radius:10px;background-color:#232323;padding:20px}
.weather_box dl dt {display:inline-block;width:100%;height:32px;font-size:20px;}
.temp_box {display:inline-block;width:100%;background:url("/dist/images/weather/ico_temperature.png") no-repeat 16px 48px}
.rain_box {display:inline-block;width:100%;background:url("/dist/images/weather/ico_rainfall.png") no-repeat 10px 44px}
.temp_box dd, .rain_box dd {display:inline-block;width:100%;height:108px;font-size:60px;text-align:right;font-weight:600}
.sub_temp {line-height:200%;color:#cacaca;font-weight:400;padding-right:12px;font-size:16px}

.basic_box {display:inline-block;width:64%;height:140px}
.basic_box dd {display:inline-block;width:100%;font-size:60px;font-weight:600;padding-top:18px}
.air_level {display:inline-block;width:35%;height:140px;text-align:right;padding-top:10px}
.air_measure {font-size:14px;line-height:170%;padding-left:2px}
.txt_40 {font-size:40px;line-height:150%;font-weight:400}

@media all and (max-width:1500px) {
	.air_level img {width:100px;height:105px}
}

.air_databox {display:inline-block;width:100%;height:190px}

.weather_table {border-top:1px solid #616161;table-layout:fixed}
.weather_table th {border-bottom:1px solid #616161;border-right:1px solid #616161;font-size:14px;padding:10px;vertical-align:middle}
.weather_table td {border-bottom:1px solid #616161;border-right:1px solid #616161;text-align:right;font-size:13px;padding:10px 8px 10px 0;color:#2a2a2a;font-weight:400}/* #232323 */
.weather_table th:last-child, .weather_table td:last-child {border-right:0 none !important}

.td_lv1 {background-color:#53c8ff}
.td_lv2 {background-color:#78ff00}
.td_lv3 {background-color:#ffa800}
.td_lv4 {background-color:#ff2828}

.check_area {display:inline-block;width:100%;height:30px;text-align:right;}
.check_area li {display:inline-block;vertical-align:middle;text-align:left;margin-right:12px;font-size:13px;line-height:110%}
.check_area li:last-child {margin-right:0 !important}

.weather_table th {text-align:center !important}

.wea01 {display:inline-block;background-color:#53c8ff;width:12px;height:12px;border-radius:3px;vertical-align:middle;margin-right:3px}/* #00ff0c */
.wea02 {display:inline-block;background-color:#78ff00;width:12px;height:12px;border-radius:3px;vertical-align:middle;margin-right:3px}
.wea03 {display:inline-block;background-color:#ffa800;width:12px;height:12px;border-radius:3px;vertical-align:middle;margin-right:3px}
.wea04 {display:inline-block;background-color:#ff2828;width:12px;height:12px;border-radius:3px;vertical-align:middle;margin-right:3px}